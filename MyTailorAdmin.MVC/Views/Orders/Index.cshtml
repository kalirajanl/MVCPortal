@model IEnumerable<MyTailor.BDO.Orders.OrderListItem>
@{
    ViewBag.Title = "Orders List";
}

<div class="row-fluid sortable">
    <div class="box" style="width: 1200px">
        <div class="box-content">
            <p style="text-align: right">
                <a href="@Url.Action("Create", "Orders")" class="btn btn-large btn-primary"><i class="icon-plus-sign icon-white"></i>&nbsp;&nbsp;Add</a>
            </p>
            <table id="OrderList" class="table table-striped table-bordered bootstrap-datatable datatable">
                <thead>
                    <tr>
                        <th style="display: none">
                            @Html.DisplayNameFor(model => model.OrderID)
                        </th>
                        <th style="min-width: 90px">
                            @Html.DisplayNameFor(model => model.OrderNumber)
                        </th>
                        <th style="min-width: 80px">
                            @Html.DisplayNameFor(model => model.OrderTakenDate)
                        </th>
                        <th style="min-width: 100px">
                            @Html.DisplayNameFor(model => model.PaidAmount)
                        </th>
                        <th style="min-width: 100px">
                            @Html.DisplayNameFor(model => model.OrderAmount)
                        </th>
                        <th style="min-width: 110px">
                            @Html.DisplayNameFor(model => model.BalanceAmount)
                        </th>
                        <th style="min-width: 70px">Salesman
                        </th>
                        <th style="min-width: 130px">
                            @Html.DisplayNameFor(model => model.UploadedDate)
                        </th>
                        <th style="min-width: 130px">
                            @Html.DisplayNameFor(model => model.CardDetails.CardNumber)
                        </th>
                        <th style="min-width: 70px">
                            @Html.DisplayNameFor(model => model.CardDetails.CardExpiryDate)
                        </th>
                        <th style="min-width: 60px">
                            @Html.DisplayNameFor(model => model.HasLog)
                        </th>
                        @* <th></th>*@
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="display: none">
                                @Html.DisplayFor(modelItem => item.OrderID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderTakenDate)
                            </td>
                            <td style="text-align: right">
                                @Html.DisplayFor(modelItem => item.PaidAmount)
                            </td>
                            <td style="text-align: right">
                                @Html.DisplayFor(modelItem => item.OrderAmount)
                            </td>
                            <td style="text-align: right">
                                @Html.DisplayFor(modelItem => item.BalanceAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AssignedSalesMan.Initials)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UploadedDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CardDetails.CardNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CardDetails.CardExpiryDate)
                            </td>
                            <td>
                                @if (item.HasLog)
                                {
                                    <span>Yes</span>
                                }
                                else
                                {
                                    <span>No</span>
                                }
                            </td>
                            @*<td>
                                 @Html.ActionLink("Edit","Edit/" + item.OrderID, "Orders",new { @class = "btn btn-info" })
                            </td>*@
                        </tr>
                    }
                </tbody>
            </table>
            <div class="clearfix"></div>
        </div>
    </div>
</div>

